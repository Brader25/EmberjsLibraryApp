<h2 class="col-lg-offset-2">Add a new todo</h2>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="The name of the todo"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Task</label>
    <div class="col-sm-10">
      {{input type="text" value=model.task class="form-control" placeholder="The address of the contact"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success" {{action 'saveTodo' model}}>Add</button>
    </div>
  </div>
</div>